<html>
  <head>

  </head>

<body>
  <p class="text-success">
    <%= flash[:alret] %>
    </p>
<h1>Boooks</h1>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
      <td>
        <span><%= book.title %></span>
        </td>
      <td>
        <span><%= book.body %></span>
        </td>
        <td>
          <span><%= link_to "Show", book_path(book.id), :style=>"color:black;" %></span>
        </td>
        <td>
            <%= link_to "Edit", edit_book_path(book.id), :style=>"color:black;" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "本当に削除しますか？"}, :style=>"color:black;" %>
        </td>
        </tr>
      <% end %>
    </tbody>
    </table>

    <h2>New book</h2>

    <% if @book.errors.any? %>
     <%= @book.errors.count %>件のerrorが発生しました
     <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <div class="field">
      <label for="title">Title</label>
       <div class="title_text">
        <%= f.text_field :title %>
        </div>
      </div>

    <div class="field">
      <label for="body">Body</label>
       <div class="body_text">
        <%= f.text_area :body %>
        </div>
      </div>

    <div class="field">
    <%= f.submit 'Create Book' %>
    </div>
    <% end %>
</body>
</html>
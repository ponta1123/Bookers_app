

<body>
<h1>Boooks</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <td>
        <span>
        <%= book.title %>
        </span>
        </td>
      <td>
        <span>
        <%= book.body %>
        </span>
        </td>
        <td>
          <span>
            <%= link_to "show", book_path(book.id) %>
          </span>
        </td>
        <td>
            <%= link_to "edit", edit_book_path(book.id) %>
        </td>
        <% end %>

    </tbody>

    <h2>New book</h2>
    <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
    <% end %>
</table>
</body>